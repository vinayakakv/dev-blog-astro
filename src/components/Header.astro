---
import HeaderLink from "./HeaderLink.astro"
---

<style>
  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  header {
    position: sticky;
    top: 0;
    padding-top: 0.5rem;
    background: inherit;
    max-width: inherit;
    isolation: isolate;
    z-index: 1;
  }
  ul {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    padding: unset;
    margin: unset;
  }
  hr {
    width: unset;
  }
</style>

<header>
  <nav>
    <ul class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </ul>
  </nav>
  <hr />
</header>
